{
    "build": {
        "devPath": "../src",
        "distDir": "../src",
        "withGlobalTauri": true
    },
    "package": {
        "productName": "tauri-app",
        "version": "0.0.0"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "window": {
                "all": true
            },
            "shell": {
                "all": false,
                "open": true
            }
        },
        "windows": [
            {
                "title": "tauri-app",
                "width": 207,
                "height": 312,
                "decorations": false,
                "transparent": true,
                "alwaysOnTop": true,
                "resizable": false
            }
        ],
        "security": {
            "csp": null
        },
        "bundle": {
            "active": true,
            "targets": "all",
            "identifier": "com.tauri.dev",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ]
        }
    }
}
